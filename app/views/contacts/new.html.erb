<div class="center_everything">

<%= form_tag '/contacts', method: :post do %>
<div>
  <%= label_tag :name %>:
  <%=text_field_tag :name %>
</div>

<div>
  <%= label_tag :middle_name %>:
  <%=text_field_tag :middle_name %>
</div>

<div>
  <%= label_tag :number %>:
  <%=text_field_tag :number %>
</div>

<div>
  <%= label_tag :address %>:
  <%=text_field_tag :address %>
</div>

<div>
  <%= label_tag :bio %>:
  <%=text_field_tag :bio %>
</div>

  <div>
  <%= submit_tag "Save Contact" %>
  </div>
</div>
<% end -%>