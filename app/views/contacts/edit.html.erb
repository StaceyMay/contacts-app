<div class="center_everything">

<%= form_tag "/contacts/#{@contact.id}", method: :patch %>
<div>
  <%= label_tag :name %>:
  <%=text_field_tag :name , @contact.name%>
</div>

<div>
  <%= label_tag :middle_name %>:
  <%=text_field_tag :middle_name, @contact.middle_name %>
</div>

<div>
  <%= label_tag :number %>:
  <%=text_field_tag :number , @contact.number%>
</div>

<div>
  <%= label_tag :address %>:
  <%=text_field_tag :address , @contact.address%>
</div>


<div>
  <%= label_tag :bio %>:
  <%=text_field_tag :bio, @contact.bio %>
</div>

  <div>
  <%= submit_tag "Save Contact" %>
  </div>
</div>

